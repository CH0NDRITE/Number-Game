numbers.goto(-180, 100)
numbers.write("welcome to the game.", font=('arial', 25))
time.sleep(1)
numbers.clear()
numbers.goto(-300, 100)
numbers.write("press a number key to make a guess!", font=('arial', 25))
screen.onkey(num1,'1')
screen.onkey(num2,'2')
screen.onkey(num3,'3')
screen.onkey(num4,'4')
screen.onkey(num5,'5')
screen.onkey(num6,'6')
